<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@id/widget_tab_layout"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/widget_tab_index_height"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@id/widget_tab_icon"
        android:layout_width="@dimen/widget_tab_index_icon_width"
        android:layout_height="@dimen/widget_tab_index_icon_height"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@id/widget_tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/app_name"
        android:textColor="@color/widget_tab_text_color"
        android:textSize="@dimen/widget_tab_index_text_size" />

</LinearLayout>